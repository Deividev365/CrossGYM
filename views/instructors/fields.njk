            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                     type="url"
                     name="avatar_url"
                     placeholder="http://"
                     value="{{instructor.avatar_url}}"
                     >
                </div>
            </div>

            <div class="item">
                <div>Seu Nome</div>
                <div>
                    <input 
                     type="text"
                     name="name"
                     placeholder="Digite o seu nome"
                     value="{{instructor.name}}"
                     >

                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input 
                     type="birth"
                     placeholder="dd-mm-yyyy" 
                     name="birth"
                     value="{{instructor.birth}}"
                     >
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span>
                        <input 
                            type="radio" 
                            name="gender" 
                            value="M" 
                            {% if instructor.gender == 'M' %}
                                checked
                            {% endif %}>Masculino
                    </span>

                    <span>
                        <input 
                            type="radio" 
                            name="gender" 
                            value="F"
                            {% if instructor.gender == 'F' %}
                                checked
                            {% endif %}>Feminino
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Área de Atuação</div>
                <div>
                    <input 
                     type="text" 
                     name="services"
                     placeholder="Separe os seus serviços por virgulas"
                     value="{{instructor.services}}"
                     >

                </div>
            </div>

                <button type="submit">Salvar</button>